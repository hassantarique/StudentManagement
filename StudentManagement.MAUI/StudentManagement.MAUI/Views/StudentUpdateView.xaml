<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentManagement.MAUI.Views.StudentUpdateView"
             Title="Update Student">
    <Grid>

        <Image Source="background.jpeg"
       Aspect="AspectFill"
       VerticalOptions="FillAndExpand" />

        <BoxView Color="Black"
         Opacity="0.4"
         VerticalOptions="FillAndExpand"
         HorizontalOptions="FillAndExpand" />

        <ScrollView>
            <VerticalStackLayout Padding="30" Spacing="15"
                             VerticalOptions="Center"
                             HorizontalOptions="Center"
                             WidthRequest="320">

                <Label Text="Update Student" FontSize="24" HorizontalOptions="Center" />

                <Entry x:Name="NameEntry"
                   Placeholder="Enter Student Name"
                   Text="{Binding Name, Mode=TwoWay}" />

                <Picker x:Name="genderIdPicker"
                    Title="Select Gender"
                    ItemsSource="{Binding Genders}" 
                    SelectedItem="{Binding SelectedGender, Mode=TwoWay}" 
                    ItemDisplayBinding="{Binding GenderDescription}"
                    TextColor="White"
                    BackgroundColor="Transparent"
                    HorizontalOptions="FillAndExpand"/>

                <DatePicker Date="{Binding DateOfBirth, Mode=TwoWay}" />

                <Entry x:Name="HeightEntry"
                   Placeholder="Enter Height"
                   Keyboard="Numeric"
                   Text="{Binding Height, Mode=TwoWay}" />

                <Entry x:Name="WeightEntry"
                   Placeholder="Enter Weight"
                   Keyboard="Numeric"
                   Text="{Binding Weight, Mode=TwoWay}" />

                <Button Text="Update Student"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    BorderColor="Wheat"
                    BorderWidth="1"
                    Clicked="OnUpdateStudentClicked" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
