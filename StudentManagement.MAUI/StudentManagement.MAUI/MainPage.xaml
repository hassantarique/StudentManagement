<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentManagement.MAUI.MainPage">

    <Grid>
        <Image Source="background.jpeg"
               Aspect="AspectFill"
               VerticalOptions="FillAndExpand" />

        <BoxView Color="Black"
                 Opacity="0.5"
                 VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand" />

        <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">

            <Label Text="Student Management System" 
                   FontSize="32" 
                   FontAttributes="Bold" 
                   TextColor="White"
                   HorizontalOptions="Center" />

            <Label Text="Manage students effortlessly"
                   FontSize="18"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Opacity="0.8" />

            <Label Text="Open the menu to start navigating"
               FontSize="16"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="End"
               Margin="0,0,0,30"
               Opacity="0.7" />

        </VerticalStackLayout>
    </Grid>

</ContentPage>
