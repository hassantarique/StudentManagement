<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StudentManagement.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StudentManagement.MAUI"
    xmlns:Views="clr-namespace:StudentManagement.MAUI.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="StudentManagement.MAUI">

    <FlyoutItem Title="Home" Icon="home_icon.png">
        <ShellContent Title="Home"
                          ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Student Options" Icon="student_icon.png">
        <ShellContent ContentTemplate="{DataTemplate Views:StudentView}" />
    </FlyoutItem>

    <FlyoutItem Title="Gender Options" Icon="gender_icon.png">
        <ShellContent ContentTemplate="{DataTemplate Views:GenderView}" />
    </FlyoutItem>

</Shell>
